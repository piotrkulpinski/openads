{
  "name": "openads",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "npm run biome check --write .",
    "format": "npm run biome format --write .",
    "db:generate": "npm run db:generate -w packages/db",
    "db:migrate": "npm run db:migrate -w packages/db",
    "db:studio": "npm run db:studio -w packages/db",
    "db:push": "npm run db:push -w packages/db",
    "db:reset": "npm run db:reset -w packages/db",
    "postinstall": "npm run db:generate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "npm@11.6.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
