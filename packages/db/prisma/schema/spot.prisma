model Spot {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  previewUrl  String?
  price       Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String
  bookings    Booking[]
  fields      Field[]

  // Indexes
  @@index([workspaceId])
}
