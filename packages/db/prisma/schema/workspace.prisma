model Workspace {
  id         String   @id @default(cuid())
  name       String
  slug       String   @unique
  websiteUrl String
  faviconUrl String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  users    WorkspaceUser[]
  spots    Spot[]
  bookings Booking[]

  // Indexes
  @@unique([name, slug])
}

enum WorkspaceUserRole {
  Owner
  Manager
  Advertiser
}

model WorkspaceUser {
  userId      String
  workspaceId String
  role        WorkspaceUserRole @default(Owner)

  // Relations
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  // Indexes
  @@id([userId, workspaceId])
  @@index([userId])
  @@index([workspaceId])
}
